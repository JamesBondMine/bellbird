  #  Installing WebRTC-SDK (104.5112.07)
#  pod 'WebRTC-SDK', '=125.6422.07'
  #即构音视频
  pod 'ZegoExpressEngine', '3.5.0'
  
  #美团日志SDK
  pod 'Logan', '1.2.8'
  #Sentry
  pod 'Sentry', :git => 'https://github.com/getsentry/sentry-cocoa.git', :tag => '8.48.0'
  
  # RAC
  pod 'ReactiveObjC', :inhibit_warnings => true
  
  # 网络监听
  pod 'NetworkStatus', :path => './NetWorkStatus/NetWorkStatus.podspec'
  
  # 本地日志
  pod 'LocalLogLib', :path => './LocalLogLib/LocalLogLib.podspec'
  
end

